# Environment Variables for WeatherShield DeFi

# Private key for deploying contracts (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Oracle Service Private Key (can be same as PRIVATE_KEY or separate)
ORACLE_PRIVATE_KEY=your_oracle_private_key_here

# Flare Network RPC URLs
FLARE_TESTNET_RPC=https://coston2-api.flare.network/ext/C/rpc
FLARE_MAINNET_RPC=https://flare-api.flare.network/ext/C/rpc
RPC_URL=https://coston2-api.flare.network/ext/C/rpc

# Flare Explorer API Key (for contract verification)
FLARE_EXPLORER_API_KEY=your_explorer_api_key

# OpenWeatherMap API Configuration
# Get your free API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key

# Legacy (deprecated)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Frontend Configuration
REACT_APP_CONTRACT_ADDRESS=deployed_contract_address
REACT_APP_NETWORK_ID=114
